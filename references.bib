pmid = {23747458},
title = {{The effect of scan length on the reliability of resting-state fMRI connectivity estimates.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/23747458 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4104183},
volume = {83},
