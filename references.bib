pages = {239--45},
pmid = {12045719},
title = {{The clinico-radiological paradox in multiple sclerosis revisited.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/12045719},
volume = {15},
year = {2002}
}
@article{Beer2016,
