keywords = {Histopathology,Inflammation,Neurodegeneration,Pathophysiology,multiple sclerosis},
mendeley-groups = {University/TFG},
number = {SUPPL. 5},
pages = {3--9},
pmid = {16254699},
title = {{The pathology of multiple sclerosis is the result of focal inflammatory demyelination with axonal damage}},
